{
  "name": "Dyslexia friendly",
  "version": "1.0",
  "manifest_version": 2,
  "icons": { 
    "128": "icon.png"
  },
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Make this page dyslexia friendly",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [ {
    "matches": [ "http://*/*", "https://*/*"],
    "js": ["script.js"],
    "css": ["font.css","style.css"]
  }]
}

